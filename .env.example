# BotPolyMarket - Environment Configuration
# Copy to .env and fill in your values

# ============================================================================
# FASE 1 - Critical APIs
# ============================================================================

# Polymarket (Required for live trading)
POLYMARKET_PRIVATE_KEY=your_ethereum_private_key_here
POLYMARKET_API_KEY=optional_api_key
POLYMARKET_CHAIN_ID=137  # 137=Polygon, 80001=Mumbai testnet

# Binance (Optional - for BTC lag strategy)
# Leave empty to use public endpoints
BINANCE_API_KEY=
BINANCE_SECRET=

# Kalshi (Optional - for cross-market arbitrage)
KALSHI_API_KEY=
KALSHI_EMAIL=
KALSHI_PASSWORD=

# ============================================================================
# FASE 2 - News & Social Media (Coming Soon)
# ============================================================================

# NewsAPI (FASE 2)
NEWS_API_KEY=

# Twitter API (FASE 2)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_BEARER_TOKEN=

# Reddit API (FASE 2)
REDDIT_CLIENT_ID=
REDDIT_CLIENT_SECRET=

# ============================================================================
# Trading Configuration
# ============================================================================

TRADING_MODE=paper  # paper or live
INITIAL_BANKROLL=10000  # USD
MAX_POSITION_PCT=0.10  # 10% max per position

# ============================================================================
# Telegram Notifications
# ============================================================================

TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_CHAT_ID=your_chat_id

# ============================================================================
# Database (Optional - for advanced features)
# ============================================================================

DATABASE_URL=postgresql://user:password@localhost/botpolymarket
REDIS_URL=redis://localhost:6379

# ============================================================================
# DeFi (v5.0)
# ============================================================================

# Polygon RPC
POLYGON_RPC=https://polygon-rpc.com
BASE_RPC=https://mainnet.base.org

# Wallet
WALLET_PRIVATE_KEY=your_defi_wallet_key

# ============================================================================
# API Server (v6.0)
# ============================================================================

SECRET_KEY=your_jwt_secret_key_here
API_RATE_LIMIT=100  # requests per minute
API_PORT=8000

# ============================================================================
# Logging
# ============================================================================

LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR
LOG_FILE=logs/bot.log

# ============================================================================
# Advanced Settings
# ============================================================================

# Kelly Criterion
KELLY_FRACTION=0.5  # Half Kelly (recommended)

# Risk Management
MAX_DRAWDOWN_PCT=0.20  # 20%
MAX_DAILY_LOSS=0.05  # 5% of bankroll

# Gap Strategies
MIN_GAP_SIZE=0.015  # 1.5%
MIN_CONFIDENCE=60  # 60%

# WebSocket
WS_ENABLED=true
WS_MAX_CONNECTIONS=50
