# BotPolyMarket - Environment Variables
# FASE 1 Configuration
# Copy to .env and fill with your actual keys

# ============================================================================
# POLYMARKET API
# ============================================================================

# Private key for signing transactions (REQUIRED for live trading)
# Get from MetaMask/Phantom wallet
# Format: 0x...
POLYMARKET_PRIVATE_KEY=

# Optional API key (not always required)
POLYMARKET_API_KEY=

# Chain ID (137 = Polygon mainnet, 80001 = Mumbai testnet)
POLYMARKET_CHAIN_ID=137

# ============================================================================
# EXTERNAL APIS (for arbitrage)
# ============================================================================

# Kalshi API (for cross-market arbitrage)
# Get from: https://kalshi.com/
KALSHI_API_KEY=
KALSHI_EMAIL=
KALSHI_PASSWORD=

# Binance API (optional, only for advanced features)
# Get from: https://www.binance.com/en/my/settings/api-management
BINANCE_API_KEY=
BINANCE_SECRET=

# ============================================================================
# TELEGRAM NOTIFICATIONS (optional)
# ============================================================================

# Telegram bot token
# Get from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=

# Your Telegram chat ID
# Get from: @userinfobot on Telegram
TELEGRAM_CHAT_ID=

# ============================================================================
# NEWS APIS (FASE 2 - not required yet)
# ============================================================================

# NewsAPI key (for news catalyst strategy)
# Get from: https://newsapi.org/
NEWS_API_KEY=

# Twitter API (for sentiment analysis)
# Get from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=
TWITTER_API_KEY=
TWITTER_API_SECRET=

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Trading mode: 'paper' or 'live'
TRADING_MODE=paper

# Initial bankroll (USD)
BANKROLL=10000

# Risk management
MAX_POSITION_PCT=0.10
MAX_DRAWDOWN_PCT=0.20

# ============================================================================
# DATABASE (optional - for trade history)
# ============================================================================

# PostgreSQL connection (optional)
DATABASE_URL=postgresql://user:password@localhost/botpolymarket

# Redis (optional - for caching)
REDIS_URL=redis://localhost:6379

# ============================================================================
# LOGGING
# ============================================================================

LOG_LEVEL=INFO
LOG_FILE=logs/bot.log
