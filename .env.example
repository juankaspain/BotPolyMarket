# BotPolyMarket - FASE 1 Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# POLYMARKET API
# ============================================================================

# Required for live trading
# Get from: https://polymarket.com/
POLYMARKET_API_KEY=your_api_key_here
POLYMARKET_PRIVATE_KEY=your_private_key_here

# Network: 137 (Polygon Mainnet), 80001 (Mumbai Testnet)
POLYMARKET_CHAIN_ID=137

# ============================================================================
# EXTERNAL APIs (Optional but recommended)
# ============================================================================

# Kalshi API (for cross-market arbitrage)
# Get from: https://kalshi.com/
KALSHI_API_KEY=your_kalshi_key_here

# NewsAPI (FASE 2 - for news catalyst strategy)
# Get from: https://newsapi.org/
NEWS_API_KEY=your_newsapi_key_here

# Twitter API (FASE 2 - for sentiment analysis)
# Get from: https://developer.twitter.com/
TWITTER_BEARER_TOKEN=your_twitter_token_here

# ============================================================================
# TRADING CONFIGURATION
# ============================================================================

# Trading mode: 'paper' or 'live'
TRADING_MODE=paper

# Initial bankroll (USD)
BANKROLL=10000

# Kelly fraction (0.25 = Quarter Kelly, 0.5 = Half Kelly)
KELLY_FRACTION=0.5

# Max position size (% of bankroll)
MAX_POSITION_PCT=0.10

# ============================================================================
# TELEGRAM ALERTS (Optional)
# ============================================================================

# Telegram Bot Token
# Get from: @BotFather on Telegram
TELEGRAM_BOT_TOKEN=your_telegram_token_here

# Telegram Chat ID
# Get from: @userinfobot on Telegram
TELEGRAM_CHAT_ID=your_chat_id_here

# ============================================================================
# TESTING
# ============================================================================

# Enable WebSocket testing (requires valid token)
TEST_WEBSOCKET=false

# Enable strategy testing (requires API access)
TEST_STRATEGIES=false

# ============================================================================
# LOGGING
# ============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Save trades to CSV
SAVE_TRADES=true

# ============================================================================
# DATABASE (Future)
# ============================================================================

# PostgreSQL connection (for advanced tracking)
# DATABASE_URL=postgresql://user:password@localhost:5432/botpolymarket

# Redis (for caching)
# REDIS_URL=redis://localhost:6379
