# ==============================================
# CONFIGURACIÓN BOT POLYMARKET v2.0
# ==============================================

# CAPITAL Y TRADING
YOUR_CAPITAL=1500
INITIAL_CAPITAL=1500

# MODO DE OPERACIÓN
# "monitor" = solo monitorea, no ejecuta trades
# "execute" = ejecuta trades reales (requiere PRIVATE_KEY)
MODE=monitor

# POLLING
POLLING_INTERVAL=30

# COPY TRADING (opcional)
TRADER_ADDRESS=

# WALLET (solo para modo execute)
WALLET_ADDRESS=
PRIVATE_KEY=

# POLYMARKET API (opcional)
POLYMARKET_API_KEY=

# ==============================================
# V2.0 - ML GAP PREDICTOR
# ==============================================

# ML MODEL
MODEL_PATH=models/lstm_gap_predictor.h5
SCALER_PATH=models/scaler.pkl
SEQUENCE_LENGTH=30
PREDICTION_THRESHOLD=0.78

# SENTIMENT ANALYSIS
USE_FINBERT=false
TWITTER_BEARER_TOKEN=
NEWS_API_KEY=

# TELEGRAM NOTIFICATIONS
TELEGRAM_ENABLED=false
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ROI TRACKING
ROI_DATA_PATH=data/roi_tracking.json

# ==============================================
# LOGGING Y DATABASE
# ==============================================

LOG_LEVEL=INFO
LOG_FILE=bot_polymarket.log
DATABASE_PATH=bot_polymarket.db

# ==============================================
# ESTRATEGIAS GAP (v2.0+)
# ==============================================

# Gap thresholds
MIN_GAP_SIZE=0.03
MAX_GAP_SIZE=0.20
MIN_VOLUME=10000
MIN_LIQUIDITY=5000

# Risk management
MAX_POSITION_SIZE=0.10
STOP_LOSS_PCT=0.15
TAKE_PROFIT_PCT=0.25

# ==============================================
# BACKTEST
# ==============================================

BACKTEST_START_DATE=2025-07-01
BACKTEST_END_DATE=2026-01-17
